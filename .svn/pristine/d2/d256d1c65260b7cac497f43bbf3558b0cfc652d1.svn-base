	public void orientationChanged(float pitch, float azimuth, float roll) {
		if(roll > 1 && roll < 90 ){
			if(_rx > 0-_role.getWidth()){
				_rx -= (int)((Math.sqrt(roll))*2);
			}else{
				_rx = 376;
			}
		}
		if(roll < -1 && roll > -90 ){
			if(_rx < 376){
				_rx += (int)((Math.sqrt(-(roll)))*2);
			}else{
				_rx = 0-_role.getWidth();
			}
		}
		_role.setLocation(_rx, _role.getY());
	}

